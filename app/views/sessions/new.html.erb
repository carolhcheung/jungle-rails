<section class="login">

<header class="page-header">
    <h1>Login</h1>
  </header>

  <div class="col-5">  
<%= form_tag '/login' do %>

  <div class="form-group">
  <%= label_tag :email %>
  <%= text_field_tag :email, "", class: 'form-control' %>
  </div>

  <div class="form-group">
  <%= label_tag :password %>
  <%= password_field_tag :password, "", class: 'form-control' %>
  </div>
  
  <%= submit_tag "Submit", class: 'btn btn-primary my-3' %>

<% end %>

<h5>Don't have an account? <%= link_to 'Sign Up Now!', [:signup] %></h5>
</div>
</section>
